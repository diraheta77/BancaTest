@model TransactionViewModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Nueva Compra</h2>
        </div>
        <div class="card-body">
            <form asp-action="Purchase" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="Type" />
                <input type="hidden" asp-for="CreditCardId" value="1" />

                <div class="form-group">
                    <label asp-for="Date">Fecha</label>
                    <input asp-for="Date" class="form-control" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Description">Descripci√≥n</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Amount">Monto</label>
                    <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Registrar Compra</button>
                    <a asp-action="Index" asp-controller="CreditCard" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/transaction/purchase.js"></script>
}