@using BancaWeb.Models.ViewModels
@model ConfigurationViewModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Configuración de Tasas</h2>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="LastUpdated" />

                <div class="form-group">
                    <label asp-for="InterestRate">Tasa de Interés (%)</label>
                    <input asp-for="InterestRate" class="form-control" type="number" step="0.01" min="0" max="100" />
                    <span asp-validation-for="InterestRate" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="MinimumPaymentRate">Tasa de Pago Mínimo (%)</label>
                    <input asp-for="MinimumPaymentRate" class="form-control" type="number" step="0.01" min="0" max="100" />
                    <span asp-validation-for="MinimumPaymentRate" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}